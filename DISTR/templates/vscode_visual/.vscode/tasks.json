{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Скомпилировать wxWidgets-приложение (Release)",
            "type": "shell",
            "command": "set",
            "args": [
                "PATH=D:/Development/RedPanda-CPP/mingw64/bin;%PATH%",
                "&&",
                "windres",
                "-i",
                "${workspaceFolder}/myapp.rc",
                "--input-format=rc",
                "-o",
                "${workspaceFolder}/myapp.res",
                "-O",
                "coff",
                "&&",
                "D:/Development/RedPanda-CPP/mingw64/bin/x86_64-w64-mingw32-g++.exe",
                "-o",
                "${workspaceFolder}/myapp.exe",
                "${workspaceFolder}/*.cpp",
                "${workspaceFolder}/myapp.res",
                "-ID:/Development/RedPanda-CPP/wxWidgets/include",
                "-ID:/Development/RedPanda-CPP/wxWidgets/lib/gcc_lib/mswu",
                "-LD:/Development/RedPanda-CPP/wxWidgets/lib/gcc_lib",
                "-mthreads",
                "-lwxmsw33u_core",
                "-lwxbase33u",
                "-lgdiplus",
                "-lmsimg32",
                "-lwxpng",
                "-lwxjpeg",
                "-lwxtiff",
                "-lwxzlib",
                "-lwxregexu",
                "-lkernel32",
                "-luser32",
                "-lgdi32",
                "-lwinspool",
                "-lcomdlg32",
                "-ladvapi32",
                "-lshell32",
                "-lole32",
                "-loleaut32",
                "-luuid",
                "-lcomctl32",
                "-lwsock32",
                "-lodbc32",
                "-lshlwapi",
                "-lversion",
                "-loleacc",
                "-luxtheme",
                "-mwindows",
                "-static",
                "-finput-charset=utf-8",
                "-lstdc++",
                "-lsqlite3",
                "-O2",
                "-DNDEBUG"
            ],
            "group": "build",
            "problemMatcher": ["$gcc"],
            "options": {
                "shell": {
                    "executable": "cmd.exe",
                    "args": ["/c"]
                }
            }
        },
        {
            "label": "Скомпилировать wxWidgets-приложение (Debug)",
            "type": "shell",
            "command": "set",
            "args": [
                "PATH=D:/Development/RedPanda-CPP/mingw64/bin;%PATH%",
                "&&",
                "windres",
                "-i",
                "${workspaceFolder}/myapp.rc",
                "--input-format=rc",
                "-o",
                "${workspaceFolder}/myapp.res",
                "-O",
                "coff",
                "&&",
                "D:/Development/RedPanda-CPP/mingw64/bin/x86_64-w64-mingw32-g++.exe",
                "-o",
                "${workspaceFolder}/myappd.exe",
                "${workspaceFolder}/*.cpp",
                "${workspaceFolder}/myapp.res",
                "-ID:/Development/RedPanda-CPP/wxWidgets/include",
                "-ID:/Development/RedPanda-CPP/wxWidgets/lib/gcc_lib/mswud",
                "-LD:/Development/RedPanda-CPP/wxWidgets/lib/gcc_lib",
                "-mthreads",
                "-g",
                "-O0",
                "-DDEBUG",
                "-lwxmsw33ud_core",
                "-lwxbase33ud",
                "-lgdiplus",
                "-lmsimg32",
                "-lwxpngd",
                "-lwxjpegd",
                "-lwxtiffd",
                "-lwxzlibd",
                "-lwxregexud",
                "-lkernel32",
                "-luser32",
                "-lgdi32",
                "-lwinspool",
                "-lcomdlg32",
                "-ladvapi32",
                "-lshell32",
                "-lole32",
                "-loleaut32",
                "-luuid",
                "-lcomctl32",
                "-lwsock32",
                "-lodbc32",
                "-lshlwapi",
                "-lversion",
                "-loleacc",
                "-luxtheme",
                "-mwindows",
                "-static",
                "-finput-charset=utf-8",
                "-lstdc++",
                "-lsqlite3"
            ],
            "group": "build",
            "problemMatcher": ["$gcc"],
            "options": {
                "shell": {
                    "executable": "cmd.exe",
                    "args": ["/c"]
                }
            }
        },
        {
            "label": "Запустить myapp.exe (Release)",
            "type": "shell",
            "command": "${workspaceFolder}/myapp.exe",
            "problemMatcher": []
        },
        {
            "label": "Запустить myappd.exe (Debug)",
            "type": "shell",
            "command": "${workspaceFolder}/myappd.exe",
            "problemMatcher": []
        }
    ]
}