{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Скомпилировать wxWidgets-приложение (Release)",
            "type": "shell",
            "command": "D:/Development/RedPanda-CPP/mingw64/bin/x86_64-w64-mingw32-g++.exe",
            "args": [
                "-o",
                "${workspaceFolder}/myapp.exe",
                "${workspaceFolder}/*.cpp",
                "-ID:/Development/RedPanda-CPP/wxWidgets/include",
                "-ID:/Development/RedPanda-CPP/wxWidgets/lib/gcc_lib/mswu",
                "-LD:/Development/RedPanda-CPP/wxWidgets/lib/gcc_lib",
                "-mthreads",
                "-lwxmsw32u_core",
                "-lwxbase32u",
                "-lwxpng",
                "-lwxjpeg",
                "-lwxtiff",
                "-lwxzlib",
                "-lwxregexu",
                "-lkernel32",
                "-luser32",
                "-lgdi32",
                "-lwinspool",
                "-lcomdlg32",
                "-ladvapi32",
                "-lshell32",
                "-lole32",
                "-loleaut32",
                "-luuid",
                "-lcomctl32",
                "-lwsock32",
                "-lodbc32",
                "-lshlwapi",
                "-lversion",
                "-loleacc",
                "-luxtheme",
                "-static",
                "-O2",
                "-DNDEBUG",
                "-finput-charset=utf-8",
                "-mwindows",
                "-lstdc++",
                "-lsqlite3"
            ],
            "group": "build",
            "problemMatcher": []
        },
        {
            "label": "Скомпилировать wxWidgets-приложение (Debug)",
            "type": "shell",
            "command": "D:/Development/RedPanda-CPP/mingw64/bin/x86_64-w64-mingw32-g++.exe",
            "args": [
                "-o",
                "${workspaceFolder}/myappd.exe",
                "${workspaceFolder}/*.cpp",
                "-ID:/Development/RedPanda-CPP/wxWidgets/include",
                "-ID:/Development/RedPanda-CPP/wxWidgets/lib/gcc_lib/mswud",
                "-LD:/Development/RedPanda-CPP/wxWidgets/lib/gcc_lib",
                "-mthreads",
                "-g",
                "-O0",
                "-DDEBUG",
                "-lwxmsw32ud_core",
                "-lwxbase32ud",
                "-lwxpngd",
                "-lwxjpegd",
                "-lwxtiffd",
                "-lwxzlibd",
                "-lwxregexud",
                "-lkernel32",
                "-luser32",
                "-lgdi32",
                "-lwinspool",
                "-lcomdlg32",
                "-ladvapi32",
                "-lshell32",
                "-lole32",
                "-loleaut32",
                "-luuid",
                "-lcomctl32",
                "-lwsock32",
                "-lodbc32",
                "-lshlwapi",
                "-lversion",
                "-loleacc",
                "-luxtheme",
                "-static",
                "-mwindows",
                "-lstdc++",
                "-lsqlite3"
            ],
            "group": "build",
            "problemMatcher": []
        },
        {
            "label": "Запустить myapp.exe (Release)",
            "type": "shell",
            "command": "cmd",
            "args": [
                "/c",
                "set PATH=D:/Development/RedPanda-CPP/mingw64/bin;%PATH% &&",
                "start",
                "\"\"",
                "${workspaceFolder}/myapp.exe"
            ],
            "problemMatcher": []
        },
        {
            "label": "Запустить myappd.exe (Debug)",
            "type": "shell",
            "command": "cmd",
            "args": [
                "/c",
                "set PATH=D:/Development/RedPanda-CPP/mingw64/bin;%PATH% &&",
                "start",
                "\"\"",
                "${workspaceFolder}/myappd.exe"
            ],
            "problemMatcher": []
        }
    ]
}